<div class="container mt-3">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-12 col-sm-6 col-md-3 mt-3">
        <div class="card">
          <img src="https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200" class="card-img-top" alt="...">
          <div class="card-body bg-light">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-text"><%= flat.address %></p>
              <div>
                <i class="fas fa-user-friends"></i><span><%= flat.number_of_guests %></span>
                <i class="fas fa-euro-sign"></i><span><%= flat.price_per_night %></span>
              </div>
          </div>
          <div class="buttons m-3">
            <%= link_to "More Info", flat_path(flat) , class:"text-primary" %>
            <%= link_to "Edit", edit_flat_path(flat) , class:"text-warning" %>
            <%= link_to "Remove", flat_path(flat) , class:"text-danger", method: :delete %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>